<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nameless.nameless.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colororange">

        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:src="@mipmap/fanhui"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登陆"
            android:textColor="@color/colorwhite"
            android:textSize="23sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rg_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:text="账号密码登陆"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/rb_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:button="@null"
                android:text="快捷免密登录"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="22sp" />
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:background="@color/colororange" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:visibility="gone">

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:background="@color/colororange" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext_normal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="手机号码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_login_code"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入账号"
            android:inputType="number"
            android:maxLength="11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_authcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="验证码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_login_authcode"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="手机验证"
                android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_login_authcode"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_edittext_focused"
            android:text="获取验证码"
            android:textColor="@color/colororange"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_pwsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext_normal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="设置密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_login_pwsd"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="6-20位数字或字母"
            android:inputType="textWebPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colororange"
        android:text="登陆"
        android:textColor="@color/colorwhite"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/te_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="如果还没有账号，请先注册 > >"
        android:textColor="@color/colororange"
        android:textSize="18sp" />

    <!--为自动登陆用布局  不必展现-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_login_commitid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="记住帐号" />

        <CheckBox
            android:id="@+id/cb_login_commitlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="自动登录" />
    </LinearLayout>

</LinearLayout>
